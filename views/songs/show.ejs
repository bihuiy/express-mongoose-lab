<!-- views/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Song</title>
  </head>
  <body>
    <%- include("../partials/nav.ejs") %>

    <h1><%= song.name %></h1>
    <h2>by <%= song.artist %> · <%= song.album %> · <%= song.releaseYear %></h2>

    <section class="controls">
      <form action="/songs/<%= song._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete this song</button>
      </form>
      <a href="/songs/<%= song._id %>/edit">
        <button type="submit">Edit this song</button>
      </a>
    </section>
  </body>
</html>
